<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212529">

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="409dp"
        android:layout_height="49dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/gradient2"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/scorelabel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:baselineAligned="false"
            android:fontFamily="sans-serif-black"
            android:text="SCORE:"
            android:textAlignment="textEnd"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="36sp" />

        <EditText
            android:id="@+id/score"
            android:layout_width="95dp"
            android:layout_height="match_parent"
            android:baselineAligned="false"
            android:editable="true"
            android:ems="10"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:focusedByDefault="false"
            android:fontFamily="sans-serif-black"
            android:text="0"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textSize="24sp" />

    </TableRow>

    <ImageView
        android:id="@+id/imgq"
        android:layout_width="379dp"
        android:layout_height="225dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:foreground="@drawable/msklayer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hint" />

    <EditText
        android:id="@+id/ans"
        android:layout_width="293dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:hint="Введите ответ"
        android:inputType="textPersonName"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgq" />

    <Button
        android:id="@+id/send"
        android:layout_width="79dp"
        android:layout_height="49dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="16dp"
        android:text="send"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ans"
        app:layout_constraintTop_toBottomOf="@+id/imgq" />

    <ImageButton
        android:id="@+id/hint"
        android:layout_width="39dp"
        android:layout_height="40dp"
        android:layout_marginStart="341dp"
        android:layout_marginTop="138dp"
        android:layout_marginEnd="15dp"
        android:background="#00FFFFFF"
        android:foreground="@android:drawable/ic_dialog_info"
        app:layout_constraintBottom_toTopOf="@+id/imgq"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableRow1" />

    <TextView
        android:id="@+id/question"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/imgq"
        app:layout_constraintEnd_toEndOf="@+id/imgq"
        app:layout_constraintStart_toStartOf="@+id/imgq"
        app:layout_constraintTop_toTopOf="@+id/imgq" />

</androidx.constraintlayout.widget.ConstraintLayout>